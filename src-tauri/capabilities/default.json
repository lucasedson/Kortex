{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "**" },
        { "path": "$APPDATA/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    "dialog:default",
    "store:default"
  ]
}